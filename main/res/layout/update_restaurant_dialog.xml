<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent" android:orientation="vertical">


    <EditText
        android:id="@+id/EditrestaurantiD"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textColor="@color/colorOrange"
        android:textStyle="bold" />
    <EditText
        android:id="@+id/EditRESTTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView" />
    <EditText
        android:id="@+id/EditRESTArea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView" />
    <EditText
        android:id="@+id/EditRestCity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView" />



    <EditText
        android:id="@+id/EditContactNo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView" />
    <EditText
        android:id="@+id/EditRESTAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView" />
    <EditText
        android:id="@+id/EditRestopeningTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView" />
    <EditText
        android:id="@+id/EditRestClosingTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView" />


    <Button
        android:id="@+id/buttonUpdateRestByID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorLime"
        android:text="Update " />

    <Button
        android:id="@+id/buttonDeleteRESTByID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@color/colorOrange"

        android:text="Delete " />




</LinearLayout>