<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:context=".ViewUsers">


    <EditText
        android:id="@+id/textViewUpdateUserID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textColor="@color/colorOrange"
        android:textStyle="bold" />
    <EditText
        android:id="@+id/textViewUpdateName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView" />
    <EditText
        android:id="@+id/textViewUpdateFNAme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView" />
    <TextView
        android:id="@+id/textViewUpdatePassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView" />

    <EditText
        android:id="@+id/textViewUpdateArea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView" />
    <EditText
        android:id="@+id/textViewUpdateCity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView" />
    <EditText
        android:id="@+id/textViewUpdateAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView" />
    <EditText
        android:id="@+id/textViewUpdateEmial"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView" />
    <EditText
        android:id="@+id/textViewUpdateMobileNo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView" />

    <Button
        android:id="@+id/buttonUpdateUserByID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorLime"
        android:text="Update" />

    <Button
        android:id="@+id/buttonDeleteUserByID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@color/colorOrange"

        android:text="Delete" />




</LinearLayout>